    <add key="UnobtrusiveJavaScriptEnabled" value="true"/>
    <add key="RepositoryUrl" value="http://simoffice-sandbox.apto.elsevier.com/Cert-Environment"/>
    <add key="SimOfficeMaxFileSize" value="3145728"/>   
    <!--3 MB=3145728 bytes-->
    <add key="AptoUserId" value="admin" />
