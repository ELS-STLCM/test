    <div class="grid_8  remove-div-space" style="float:right">
        @Html.TextBox("searchText", "", new { id = "searchText", @class = "grid_26" })
        <input type="image" id="buttonSearch" src="@Url.Content("~/Content/Images/Buttons/button_search.png")" class="select-hand"/>
